{
  "name": "firestore-deleter",
  "version": "1.0.2",
  "description": "A utility for Google Firebase that allows for convenient deleting of Firestore collections.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tslint --project tsconfig.json && tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PromiseNetwork/firestore-deleter.git"
  },
  "bugs": {
    "url": "https://github.com/PromiseNetwork/firestore-deleter/issues"
  },
  "homepage": "https://github.com/PromiseNetwork/firestore-deleter#readme",
  "peerDependencies": {
    "firebase-admin": "^5.13.1",
    "firebase-functions": "^2.3.0"
  },
  "devDependencies": {
    "firebase-admin": "^5.13.1",
    "firebase-functions": "^2.3.0",
    "@types/node": "11.13.7",
    "@types/jest": "23.3.5",
    "jest": "23.3.0",
    "prettier": "1.16.1",
    "ts-jest": "23.10.4",
    "tslint": "5.13.0",
    "tslint-language-service": "0.9.9",
    "typescript": "3.1.3"
  },
  "jest": {
    "testRegex": "(.*|\\.(test))\\.(ts|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/",
      "/dist/"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json",
        "diagnostics": false
      }
    }
  },
  "author": "Shane O'Sullivan",
  "license": "MIT"
}
